<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="gamesTable"
        messagesPack="de.diedavids.cuba.dataimport.web.example.game">
    <data readOnly="true">
        <collection id="gamesDc"
                    class="de.diedavids.cuba.dataimport.entity.example.Game"
                    view="_local">
            <loader id="gamesDl">
                <query>
                    <![CDATA[select e from ddcdi_Game e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="gamesTable"
            spacing="true">
        <filter id="filter"
                applyTo="gamesTable"
                dataLoader="gamesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="gamesTable"
                    width="100%"
                    dataContainer="gamesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="gamesTable.create"/>
                <button id="editBtn" action="gamesTable.edit"/>
                <button id="removeBtn" action="gamesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
